{
  "title": "Repository Submission",
  "description": "The repository submission form allows users to submit files to a repository.",
  "case_description": "Repository Submission",
  "initialParameters": {
    "next-workflow": {
      "value": "4"
    },
    "submission-success-status": {
      "value": "pending-hidden"
    },
    "create-new-node": {
      "value": true
    },
    "event-creation-choices": {
      "value": [
        {
          "label": "Use an existing node",
          "parameter": "use-existing-node"
        },
        {
          "label": "Create a new node",
          "parameter": "create-new-node"
        }
      ]
    }
  },
  "sections": [
    {
      "label": "Upload Files",
      "widgets": [
        {
          "label": "Node Create",
          "description": "Creates the node when its parameter 'enable' is set to true",
          "widgetType": "widget-node-creator",
          "parameters": {
            "enable": "create-new-node",
            "node": "node"
          }
        },

        {
          "label": "Upload a file",
          "description": "Select the file to upload",
          "widgetType": "widget-file-uploader",
          "parameters": {
            "fileData": "file-data",
            "fileName": "file-name"
          }
        },
        {
          "label": "Title",
          "description": "Enter the title of your upload.",
          "widgetType": "widget-text-field",
          "parameters": {
            "value": "title-widget"
          }
        }
      ]
    },
    {
      "label": "Description",
      "description": "Add a brief description of the data.",
      "widgets": [{
        "label": "Description",
        "description": "Add a description",
        "widgetType": "widget-text-area",
        "parameters": {
          "value": "description"
        }
      }]
    },
    {
      "label": "File Metadata",
      "description": "Enter the metadata for the file",
      "widgets": [
        {
          "label": "Metadata",
          "desciption": "Enter the metadata for the file that is being uploaded",
          "widgetType": "widget-text-field",
          "parameters": {
            "value": "metadata"
          }
        }
      ]
    },
    {
      "label": "Submit",
      "description": "Submit this talk to the meeting",
      "widgets": [
        {
          "label": "Submit",
          "description": "Submit this talk",
          "widgetType": "widget-repository-submit",
          "parameters": {
            "item": "item",
            "title": "title-widget",
            "description": "description",
            "fileData": "file-data",
            "fileName": "file-name",
            "submissionSuccessStatus": "submission-success-status",
            "node": "node",
            "metadata": "metadata",
            "nextWorkflow": "next-workflow"
          }
        }
      ]
    }
  ]
}

